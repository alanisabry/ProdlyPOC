<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Conga_Date__c</fullName>
    <description>Sets date in YYMMDD format for Conga output file names.</description>
    <externalId>false</externalId>
    <formula>RIGHT(TEXT(YEAR(TODAY())),2) 

&amp; LPAD(TEXT(MONTH(TODAY())),2,&quot;0&quot;) 

&amp; LPAD(TEXT(DAY(TODAY())),2,&quot;0&quot;)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Conga Date</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <type>Text</type>
    <unique>false</unique>
</CustomField>
