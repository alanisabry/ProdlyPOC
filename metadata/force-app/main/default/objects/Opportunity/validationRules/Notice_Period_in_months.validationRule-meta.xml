<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Notice_Period_in_months</fullName>
    <active>true</active>
    <errorConditionFormula>AND(Notice_period_months__c&gt;24,
NOT(Contains($Profile.Name,&quot;System Administrator&quot;)),
NOT($Profile.Name = &quot;Automated Process&quot;))</errorConditionFormula>
    <errorDisplayField>Notice_period_months__c</errorDisplayField>
    <errorMessage>Please enter the notice period in months.</errorMessage>
</ValidationRule>
