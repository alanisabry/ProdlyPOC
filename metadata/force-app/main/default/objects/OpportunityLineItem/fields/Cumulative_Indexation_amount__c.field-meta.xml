<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cumulative_Indexation_amount__c</fullName>
    <description>Used to store the cumulative indexation applied to product pricing.</description>
    <formula>IF( Pricing_factors_applied_on_OLI__c &amp;&amp;  NOT(ISBLANK(Opportunity.Applied_Cumulative_Indexation__c)),
      Total_Initial_Default_Price_ARR_One_off__c * Opportunity.Applied_Cumulative_Indexation__c,
    0
   )</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Cumulative Indexation amount</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <type>Currency</type>
</CustomField>
