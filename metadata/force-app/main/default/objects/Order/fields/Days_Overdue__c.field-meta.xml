<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Days_Overdue__c</fullName>
    <description>BODEV-1765: Days Overdue on Order</description>
    <externalId>false</externalId>
    <formula>if(ISPICKVAL( Payment_Status__c , &quot;Open&quot;),if (ISBLANK (Due_Date__c), NULL, if (Today() - Due_Date__c &gt; 0, Today() - Due_Date__c, NULL)),NULL)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Days Overdue</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
