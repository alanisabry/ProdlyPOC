<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Indexation_type_is_required</fullName>
    <active>true</active>
    <errorConditionFormula>ISCHANGED(Indexation__c)&amp;&amp;
(ISPICKVAL(Indexation__c,&apos;Yes&apos;) || 
 ISPICKVAL(Indexation__c,&apos;After Initial Term&apos;)) &amp;&amp; 
