<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Payable_email_no_semicolons</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT($Profile.Name = &quot;Automated Process&quot;),
    OR(
        CONTAINS(Credit_Control_Reminder_Email__c, &quot;;&quot;),
        AND(
            CONTAINS(Credit_Control_Reminder_Email__c, &quot; &quot;),
            NOT(CONTAINS(Credit_Control_Reminder_Email__c, &quot; ,&quot;)),
            NOT(CONTAINS(Credit_Control_Reminder_Email__c, &quot;, &quot;))
        )
    )
)</errorConditionFormula>
    <errorDisplayField>Credit_Control_Reminder_Email__c</errorDisplayField>
    <errorMessage>Use comma (,) as a separator for multiple emails. Not semicolon (;)</errorMessage>
</ValidationRule>
