<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Partner_Source_is_required</fullName>
    <active>false</active>
    <description>Partner Source should be filled if Lead Source is Partner/VASP</description>
    <errorConditionFormula>AND(
ISPICKVAL(LeadSource, &quot;VASP/Partner&quot;),
ISBLANK(TEXT(Partner_Source__c)))</errorConditionFormula>
    <errorDisplayField>Partner_Source__c</errorDisplayField>
    <errorMessage>Please fill out &quot;Partner Source&quot;</errorMessage>
</ValidationRule>
