<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Sales_team_cannot_use_Markting_Nurture</fullName>
    <active>false</active>
    <description>The Status &quot;Marketing Nurture&quot; is not available to the Sales team; &quot;Sales Nurture&quot; should be used instead.</description>
    <errorConditionFormula>AND(
ISCHANGED(Status),
ISPICKVAL(Status, &quot;Marketing Nurture&quot;),
$Profile.Name = &quot;[Bynder] Sales&quot;)</errorConditionFormula>
    <errorMessage>Please use lead status “Sales Nurture”</errorMessage>
</ValidationRule>
