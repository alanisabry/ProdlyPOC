<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Must_Not_Select_Rejected_Reason</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL( Partner_Lead_Acceptance_Status__c , &quot;Accepted&quot;)
&amp;&amp;
NOT(ISBLANK(TEXT( Partner_Lead_Rejected_Reason__c  )))</errorConditionFormula>
    <errorDisplayField>Partner_Lead_Rejected_Reason__c</errorDisplayField>
    <errorMessage>This Partner Lead is Accepted. Please remove Partner Lead Rejected Reason.</errorMessage>
</ValidationRule>
