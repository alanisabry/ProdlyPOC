    <assignments>
        <description>Updates value on the opportunity that removes package products.</description>
        <name>Allow_removing_package_products</name>
        <label>Allow removing package products</label>
        <locationX>1030</locationX>
        <locationY>210</locationY>
        <assignmentItems>
            <assignToReference>record_Opportunity.Allow_Removing_Package_Products__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Update_Opportunity</targetReference>
        </connector>
    </assignments>
    <assignments>
        <description>Sets certain package fields on the opportunity to &quot;blank&quot;. Disables the possibility to remove package products.</description>
        <name>Unset_package_fields_on_Opportunity</name>
        <label>Unset package fields on Opportunity</label>
        <locationX>1475</locationX>
        <locationY>224</locationY>
        <assignmentItems>
            <assignToReference>record_Opportunity.Allow_Removing_Package_Products__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>record_Opportunity.MM_Standardised_Package__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>record_Opportunity.Standard_Package_Name__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue></stringValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Update_Opportunity_Blank_Fields</targetReference>
        </connector>
    </assignments>
    <decisions>
        <description>Checks if the opportunity is actually a package.</description>
        <name>Package_NB_opportunity</name>
        <label>Package NB opportunity?</label>
        <locationX>532</locationX>
        <locationY>208</locationY>
        <defaultConnector>
            <targetReference>Delete_products_from_the_Products_list</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes_package_opportunity</name>
            <conditionLogic>1 AND 2 AND (3 OR 4)</conditionLogic>
            <conditions>
                <leftValueReference>record_Opportunity.MM_Standardised_Package__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>record_Opportunity.Standard_Package_Name__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>record_Opportunity.Type</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>New Business-Enterprise Cloud</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>record_Opportunity.Type</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>New Business - Expansion Portal</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Opportunity_Products</targetReference>
            </connector>
            <label>Yes, package opportunity</label>
        </rules>
    </decisions>
    <description>Flow that allows users to remove package opportunities from their New Business opportunities.</description>
