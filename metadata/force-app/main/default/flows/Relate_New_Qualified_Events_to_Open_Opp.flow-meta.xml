<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>This flow relates Qualified Event records to the open Opportunity that is furthest in the sales process based on the Stage/Probability field</description>
    <environments>Default</environments>
    <formulas>
        <name>varDescriptionCount</name>
        <dataType>Number</dataType>
        <expression>LEN ({!$Record.Description})</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <name>varEventStartDatePlus90</name>
        <dataType>DateTime</dataType>
        <expression>{!$Record.StartDateTime} + 90</expression>
    </formulas>
    <formulas>
        <name>varOppCreateDateMinus90Days</name>
        <dataType>Date</dataType>
        <expression>{!Get_Open_Opps.CreatedDate} - 90</expression>
    </formulas>
    <interviewLabel>Relate New Qualified Event to Open Opp {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Relate New Qualified Events to Open Opp</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description>Find the most recently modified, open Opp for the Account that the Contact is associated with.</description>
        <name>Get_Open_Opps</name>
        <label>Get Open Opps</label>
        <locationX>513</locationX>
        <locationY>370</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Set_the_Related_To_field_to_open_OppId</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>AccountId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.AccountId</elementReference>
            </value>
        </filters>
        <filters>
            <field>IsClosed</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>CreatedDate</field>
            <operator>LessThanOrEqualTo</operator>
            <value>
                <elementReference>varEventStartDatePlus90</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>Opportunity</object>
        <queriedFields>Id</queriedFields>
        <queriedFields>CreatedDate</queriedFields>
        <sortField>Probability</sortField>
        <sortOrder>Desc</sortOrder>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordUpdates>
        <name>Set_the_Related_To_field_to_open_OppId</name>
        <label>Set the &apos;Related To&apos; field to open OppId</label>
        <locationX>513</locationX>
        <locationY>516</locationY>
        <inputAssignments>
            <field>WhatId</field>
            <value>
                <elementReference>Get_Open_Opps.Id</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>386</locationX>
        <locationY>48</locationY>
        <connector>
            <targetReference>Get_Open_Opps</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Subject</field>
            <operator>Contains</operator>
            <value>
                <stringValue>qualified</stringValue>
            </value>
        </filters>
        <filters>
            <field>WhoId</field>
            <operator>StartsWith</operator>
            <value>
                <stringValue>003</stringValue>
            </value>
        </filters>
        <filters>
            <field>WhatId</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Event</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
