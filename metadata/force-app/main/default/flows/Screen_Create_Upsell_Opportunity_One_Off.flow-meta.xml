    <description>BODEV-4533 Tracing New Pricing Deals
Updated the flow to copy &quot;Opportunity with value-based pricing&quot; field to the One-Off Opportunity.</description>
    <environments>Default</environments>
    <formulas>
        <name>CloseDate</name>
        <dataType>Date</dataType>
        <expression>TODAY() + 7</expression>
    </formulas>
    <formulas>
        <description>Indicates the number of the One off that is being created.</description>
        <name>CurrentOneOffCount</name>
        <dataType>Number</dataType>
        <expression>{!Account.One_Off_Upsells_created_button__c} + 1</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <description>Sets the name of the created One Off opportunity</description>
        <name>OneOffName</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!Old_Opp.Name}),
IF(ISBLANK({!RenewalOpp.Name}),{!Account.Name},
UPPER(LEFT({!RenewalOpp.Name}, 2)) + &quot; -&quot; + 
IF({!RenewalOpp.OEM__c} = &quot;0010P00001xSOyuQAG&quot;,&quot;Workfront OEM - &quot;, 
	IF({!RenewalOpp.OEM__c} = &quot;0010P00001xSHsb&quot;,&quot;Acquia OEM - &quot;,&quot; &quot;)) + {!Account.Name} 
+ &quot; - Contract &quot; + IF(OR({!Account.Ex_customer_of_new_business_renewals__c} = 0, 
	ISBLANK({!Account.Ex_customer_of_new_business_renewals__c})),&quot; &quot;,&quot;&quot;)+ 
TEXT({!Account.of_New_Business_Renewals__c} - {!Account.Ex_customer_of_new_business_renewals__c})) 
+ &quot; - Upsell - One off &quot; + TEXT({!CurrentOneOffCount}),
{!Old_Opp.Name} +&quot; - Upsell - One off &quot; + TEXT({!CurrentOneOffCount}))</expression>
    </formulas>
    <formulas>
        <name>Today</name>
        <dataType>Date</dataType>
        <expression>TODAY()</expression>
    </formulas>
    <formulas>
        <name>ValueBasedPricing</name>
        <dataType>String</dataType>
        <expression>IF({!Get_Information_from_Renewal},TEXT({!RenewalOpp.Opportunity_with_value_based_pricing__c}),TEXT({!Old_Opp.Opportunity_with_value_based_pricing__c}))</expression>
    </formulas>
