    <formulas>
        <name>IndexationAmtToBeWaived</name>
        <dataType>Number</dataType>
        <expression>IF(ISNULL({!rec_Order.Previous_Indexation_Rate__c}),{!Indexation_Product.UnitPrice},
({!rec_Order.MRR__c}-{!Indexation_Product.UnitPrice})*({!rec_Order.Applied_Indexation_Rate__c}-{!rec_Order.Previous_Indexation_Rate__c})
)</expression>
