    <formulas>
        <description>Returns the quantity of the product. It is negative if the user selected that the cloned order is a credit memo and positive if selected a regular order.</description>
        <name>num_QuantityOfProduct</name>
        <dataType>Number</dataType>
        <expression>IF({!txt_OrderType} = &quot;Memo&quot;, -({!Every_Order_Product.Quantity}), {!Every_Order_Product.Quantity})</expression>
        <scale>8</scale>
    </formulas>
    <formulas>
        <name>removeFirstProduct</name>
        <dataType>String</dataType>
        <expression>TRIM(
SUBSTITUTE(
{!SelectedProd}, LEFT({!SelectedProd}, FIND(&quot;;&quot;, {!SelectedProd})), &quot;&quot;)
)</expression>
    </formulas>
