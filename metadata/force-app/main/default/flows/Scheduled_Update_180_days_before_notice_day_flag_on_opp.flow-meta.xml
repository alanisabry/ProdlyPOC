    <decisions>
        <name>Check_Opp_is_180_days_before_the_last_notice_day</name>
        <label>Check - Opp is 180 days before the last notice day</label>
        <locationX>182</locationX>
        <locationY>252</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>X180_days</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>daysbeforelastnoticedayis180</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Opportunity</targetReference>
            </connector>
            <label>180 days</label>
        </rules>
    </decisions>
    <description>This flow is used to set the &quot;180 days before the last notice day&quot; checkbox on the opportunity when the last notice day is 180 days  from today.</description>
    <environments>Default</environments>
    <formulas>
        <name>daysbeforelastnoticedayis180</name>
        <dataType>Boolean</dataType>
        <expression>IF({!$Record.Last_Notice_Day__c} = TODAY()+180, true,false)</expression>
    </formulas>
    <interviewLabel>Scheduled - Update 180 days before notice day flag on opp {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Scheduled - Update 180 days before notice day flag on opp</label>
