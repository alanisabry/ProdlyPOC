    <decisions>
        <description>This check is to identify whether the contact is a customer champion or not</description>
        <name>Customer_Champion_Check</name>
        <label>Customer Champion Check</label>
        <locationX>182</locationX>
        <locationY>839</locationY>
        <defaultConnectorLabel>No Customer Champion Present</defaultConnectorLabel>
        <rules>
            <name>Is_Champion</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>IsCustomerChampion</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Customer_Champion_Contact</targetReference>
            </connector>
            <label>Is Champion</label>
        </rules>
    </decisions>
    <description>BODEV-3767 : Typeform - Salesforce integration
BODEV- Connect a Customer Champion Program member (from Typeform) to the contact and account level</description>
    <environments>Default</environments>
    <formulas>
        <description>This field would determine whether the contact is a customer champion or not.</description>
        <name>IsCustomerChampion</name>
        <dataType>Boolean</dataType>
        <expression>AND(
    NOT(ISBLANK({!$Record.Contact__r.Id})), 
    {!$Record.Form_Name__c} = &quot;Customer Champion Program&quot;
)</expression>
    </formulas>
