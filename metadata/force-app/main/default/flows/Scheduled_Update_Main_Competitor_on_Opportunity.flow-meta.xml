    <description>Bodev - 4284 - Key Competitors mentioned on Opportunity</description>
    <environments>Default</environments>
    <formulas>
        <name>AddCompetitor</name>
        <dataType>String</dataType>
        <expression>IF (ISBLANK({!CompetitorsForOpportunity}), 
{!Check_Key_Competitor_on_Tracker.Gong__Tracker_Phrase__c}, 
{!CompetitorsForOpportunity} + &quot;, &quot;+ {!Check_Key_Competitor_on_Tracker.Gong__Tracker_Phrase__c})</expression>
    </formulas>
    <formulas>
        <description>The updated Main Competitors custom field value, after the flow was executed</description>
        <name>Updated_Competitors_Value</name>
        <dataType>String</dataType>
        <expression>If (ISBLANK({!Current_Main_Competitors}), {!CompetitorsForOpportunity},
{!Current_Main_Competitors} &amp; &apos;, &apos; &amp; {!CompetitorsForOpportunity})</expression>
    </formulas>
