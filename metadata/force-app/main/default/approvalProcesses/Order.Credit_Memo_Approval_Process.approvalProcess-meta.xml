<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>Finance</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>Opportunity</field>
        <field>OrderNumber</field>
        <field>Owner</field>
        <field>EffectiveDate</field>
        <field>EndDate</field>
        <field>Description</field>
        <field>Total_Order_Value__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>michael.muller@bynder.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Order.Credit_Memo_Type__c</field>
                <operation>equals</operation>
                <value>Administrative</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Financial - Submit For Approval</label>
        <name>Financial_Submit_For_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jean-marie.arnould@bynder.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Order.Credit_Memo_Type__c</field>
                <operation>equals</operation>
                <value>Discount,Indexation</value>
            </criteriaItems>
        </entryCriteria>
        <label>Commercial - Submit For Approval</label>
        <name>Commercial_Submit_For_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval of orders with negative total order value - Financial &amp; Commercial credit memos</description>
    <emailTemplate>unfiled$public/Credit_Memo_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Order.Total_Order_Value__c</field>
            <operation>lessThan</operation>
            <value>EUR 0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Credit_Memo_Type__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Status</field>
            <operation>notEqual</operation>
            <value>Activated</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Credit_Memo_Reason__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Description</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Activate_Order</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Alert_Credit_Memo_has_been_approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Alert_Credit_Memo_has_been_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Credit_Memo_Requestor_Email</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Credit Memo Approval</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Blank_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
