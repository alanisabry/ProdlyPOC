<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>Finance</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Opportunity</field>
        <field>EffectiveDate</field>
        <field>EndDate</field>
        <field>TotalAmount</field>
        <field>Status</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jean-marie.arnould@bynder.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submit for approval</label>
        <name>Submit_for_approval</name>
    </approvalStep>
    <description>Approval for waiving indexation on order</description>
    <emailTemplate>unfiled$public/Indexation_Waiver_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Order.Waive_Indexation__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Waive_Indexation_Approval_Status__c</field>
            <operation>equals</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Alert_Waive_Indexation_has_been_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Waive_Indexation_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Alert_Waive_Indexation_has_been_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Waive_Indexation_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_indexation_approval_status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Waive_Indexation_Requestor_Email</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Waive Indexation Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Waive_Indexation_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
