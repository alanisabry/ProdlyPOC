<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>DoA_Requester_Comments__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_indexation_approval_status_Quote</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>jean-marie.arnould@bynder.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approve indexation waiver on opportunity</description>
        <entryCriteria>
            <criteriaItems>
                <field>Quote.Waive_Indexation__c</field>
                <operation>equals</operation>
                <value>Yes,First Year</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Waive Indexation Approval</label>
        <name>Waive_Indexation_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>heidi.lasker@bynder.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Contract Term Approval</description>
        <entryCriteria>
            <booleanFilter>1 AND (2 AND 3)</booleanFilter>
            <criteriaItems>
                <field>Quote.Contract_Term__c</field>
                <operation>lessThan</operation>
                <value>12</value>
            </criteriaItems>
            <criteriaItems>
                <field>Quote.Ultimate_DoA_Level__c</field>
                <operation>notEqual</operation>
                <value>Sales Manager</value>
            </criteriaItems>
            <criteriaItems>
                <field>Quote.Ultimate_DoA_Level__c</field>
                <operation>notEqual</operation>
                <value>COO</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Contract Term Less Than 1 Year</label>
        <name>Contract_Term_Less_Than_1_Year</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Ultimate_DoA_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>All approval process should always enter this step</description>
        <entryCriteria>
            <booleanFilter>1 AND(( 2 AND 3) OR 4)</booleanFilter>
            <criteriaItems>
                <field>Quote.Ultimate_DoA_Approver__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Quote.Waive_Indexation__c</field>
                <operation>equals</operation>
                <value>Yes,First Year</value>
            </criteriaItems>
            <criteriaItems>
                <field>Quote.Ultimate_DoA_Level__c</field>
                <operation>notEqual</operation>
                <value>Pricing Committee</value>
            </criteriaItems>
            <criteriaItems>
                <field>Quote.Waive_Indexation__c</field>
                <operation>notEqual</operation>
                <value>Yes,First Year</value>
            </criteriaItems>
        </entryCriteria>
        <label>DoA: Ultimate DoA Approver Only</label>
        <name>DoA_Ultimate_DoA_Approver_Only</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval process for Delegation of Authority on Quote</description>
    <emailTemplate>unfiled$public/DoA_Approval_Request_Quote</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>FALSE</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>DoA_Approval_Finalized_Quote</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_DoA_Approval_Status_Approved_Quote</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Quote_Status_to_Price_Finalised</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>DoA_Approval_Finalized_Quote</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_DoA_Approval_Status_Rejected_Quote</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_DoA_Approval_Status_Pending_on_Quote</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>DOA Approval - Quote V1</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Set_DoA_Approval_Status_Recalled_Quote</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
